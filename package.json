{
  "name": "gavi",
  "version": "0.1.0",
  "description": "Validator for GitHub Actions workflow and action metadata",
  "bin": {
    "gavi": "./bin/gavi.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "ncc build src/cli.ts",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check --loglevel warn src/**/*.ts",
    "test": "jest",
    "test:cov": "yarn run test --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/homoluctus/gavi.git"
  },
  "keywords": [
    "GitHub Actions",
    "Linter",
    "TypeScript"
  ],
  "author": "homoluctus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/homoluctus/gavi/issues"
  },
  "homepage": "https://github.com/homoluctus/gavi#readme",
  "engines": {
    "node": ">=14.16.0",
    "yarn": ">=1.22.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/js-yaml": "^4.0.1",
    "@types/node": "^15.12.0",
    "@types/node-fetch": "^2.5.10",
    "@vercel/ncc": "^0.28.6",
    "jest": "^27.0.4",
    "prettier": "^2.3.0",
    "ts-jest": "^27.0.2",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "ajv": "^8.5.0",
    "chalk": "^4.1.1",
    "js-yaml": "^4.1.0",
    "node-fetch": "^2.6.1",
    "yargs": "^17.0.1"
  }
}
